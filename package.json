{
  "name": "fastify-sample",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "start": "node dist",
    "lint": "xo --fix",
    "check-push": "yarn lint && jscpd && yarn coverage && yarn make-badges && yarn tsc",
    "dev": "development=true nodemon | pino-pretty -c -i pid,hostname -S -t 'sys:standard'",
    "prepare": "husky install",
    "test": "ava",
    "coverage": "c8 ava",
    "make-badges": "istanbul-badges-readme"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/autoload": "^5.2.0",
    "@fastify/mongodb": "^6.0.1",
    "@fastify/sensible": "^5.1.0",
    "@fastify/swagger": "^7.4.1",
    "@fastify/type-provider-typebox": "^2.3.0",
    "@inaiat/fastify-di-plugin": "^0.0.1",
    "@inaiat/fastify-papr": "^0.0.7",
    "@sinclair/typebox": "^0.24.28",
    "@sindresorhus/is": "^5.3.0",
    "awilix": "^7.0.3",
    "env-schema": "^5.0.0",
    "fastify": "^4.4.0",
    "fastify-plugin": "^4.2.0",
    "mongodb": "^4.8.1",
    "nanoid": "^4.0.0",
    "neverthrow": "^5.0.0"
  },
  "devDependencies": {
    "@jscpd/badge-reporter": "^3.4.5",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.231",
    "@swc/helpers": "^0.4.6",
    "@types/node": "^18.7.3",
    "ava": "^4.3.1",
    "c8": "^7.12.0",
    "husky": "^8.0.1",
    "istanbul-badges-readme": "^1.8.2",
    "jscpd": "^3.4.5",
    "nodemon": "^2.0.19",
    "pino-pretty": "^9.0.0",
    "regenerator-runtime": "^0.13.9",
    "rimraf": "^3.0.2",
    "strong-mock": "^7.3.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "xo": "^0.51.0"
  },
  "jscpd": {
    "pattern": "src/**/*.ts",
    "reporters": [
      "html",
      "console",
      "badge"
    ],
    "ignore": [
      "**/__snapshots__/**"
    ],
    "absolute": true,
    "gitignore": true,
    "reportersOptions": {
      "badge": {
        "path": "./assets/jscpd-badge.svg"
      }
    }
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "xo": {
    "semicolon": false,
    "ignores": [
      "documentation/examples/*"
    ],
    "rules": {
      "@typescript-eslint/no-empty-function": "off",
      "n/no-deprecated-api": "off",
      "n/prefer-global/url": "off",
      "n/prefer-global/url-search-params": "off",
      "@typescript-eslint/no-implicit-any-catch": "off",
      "unicorn/prefer-node-protocol": "off",
      "ava/assertion-arguments": "off",
      "@typescript-eslint/no-unsafe-member-access": "off",
      "@typescript-eslint/no-unsafe-return": "off",
      "@typescript-eslint/no-unsafe-assignment": "off",
      "@typescript-eslint/no-unsafe-call": "off",
      "@typescript-eslint/await-thenable": "off",
      "@typescript-eslint/no-redundant-type-constituents": "off",
      "no-lone-blocks": "off",
      "unicorn/no-await-expression-member": "off",
      "@typescript-eslint/naming-convention": "off",
      "import/no-extraneous-dependencies": "off",
      "new-cap": "off",
      "unicorn/no-array-callback-reference": "off"
    }
  },
  "c8": {
    "reporter": [
      "json-summary"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "tsconfig.json",
      ".env"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "ts-node --experimental-specifier-resolution=node --esm ./src",
    "env": {
      "NODE_DEBUG": 9229,
      "NODE_ENV": "development"
    }
  },
  "keywords": [
    "functional",
    "fastify",
    "neverthrow",
    "awilix",
    "dependency-injection",
    "typesafe",
    "typescript",
    "esm",
    "mongodb",
    "ava",
    "test"
  ]
}
